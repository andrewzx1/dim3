BEGIN

	"N",			ID_FILE_NEW,					VIRTKEY, CONTROL, NOINVERT
    "O",			ID_FILE_OPEN,					VIRTKEY, CONTROL, NOINVERT
    "W",			ID_FILE_CLOSE,					VIRTKEY, CONTROL, NOINVERT
    "S",			ID_FILE_SAVE,					VIRTKEY, CONTROL, NOINVERT
    
	"Z",			ID_EDIT_UNDO,					VIRTKEY, CONTROL, NOINVERT
	"M",			ID_EDIT_SELECT_MORE,			VIRTKEY, CONTROL, NOINVERT
    
	"R",			ID_MODEL_PREPARE_MODEL,			VIRTKEY, CONTROL, NOINVERT

    "1",			ID_VIEW_FRONT,					VIRTKEY, CONTROL, NOINVERT
    "2",			ID_VIEW_LEFT,					VIRTKEY, CONTROL, NOINVERT
	"3",			ID_VIEW_RIGHT,					VIRTKEY, CONTROL, NOINVERT
    "4",			ID_VIEW_BACK,					VIRTKEY, CONTROL, NOINVERT
    "5",			ID_VIEW_TOP,					VIRTKEY, CONTROL, NOINVERT
    "6",			ID_VIEW_BOTTOM,					VIRTKEY, CONTROL, NOINVERT
    
	"T",			ID_MESH_SCALE,					VIRTKEY, CONTROL, NOINVERT
    
	"A",			ID_VERTEX_SELECT_ALL,			VIRTKEY, CONTROL, NOINVERT
	"A",			ID_VERTEX_SELECT_NOT_ATTACHED,	VIRTKEY, SHIFT, CONTROL, NOINVERT
 	"I",			ID_VERTEX_INVERT_NORMAL,		VIRTKEY, CONTROL, NOINVERT
    "I",			ID_VERTEX_SET_NORMAL,			VIRTKEY, CONTROL, ALT, NOINVERT
    
	"B",			ID_BONE_ADD,					VIRTKEY, CONTROL, NOINVERT
	"B",			ID_BONE_GOTO_PARENT,			VIRTKEY, CONTROL, ALT, NOINVERT

	"E",			ID_POSE_NEW,					VIRTKEY, CONTROL, NOINVERT
    "D",			ID_POSE_DUPLICATE,				VIRTKEY, CONTROL, NOINVERT

	"G",			ID_ANIMATION_NEW,				VIRTKEY, CONTROL, NOINVERT
    "P",			ID_ANIMATION_PLAY,				VIRTKEY, CONTROL, NOINVERT
    "P",			ID_ANIMATION_PLAY_BLENDED,		VIRTKEY, SHIFT, CONTROL, NOINVERT

END

