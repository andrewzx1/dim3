#include <windows.h>
#include "resource.h"

/////////////////////////////////////////////////////////////////////////////
//
// Menu
//

IDR_MAIN_MENU MENU 
BEGIN
    POPUP "File"
    BEGIN
        MENUITEM "New\tCtrl+N",								ID_FILE_NEW
        MENUITEM "Open...\tCtrl+O",							ID_FILE_OPEN
        MENUITEM "Close\tCtrl+W",							ID_FILE_CLOSE
        MENUITEM SEPARATOR
        MENUITEM "Save\tCtrl+S",							ID_FILE_SAVE
        MENUITEM SEPARATOR
        MENUITEM "Preferences",								ID_FILE_PREFERENCE
        MENUITEM SEPARATOR
        MENUITEM "Exit",									ID_FILE_EXIT
    END
    POPUP "Edit"
    BEGIN
        MENUITEM "Undo\tCtrl+Z",							ID_EDIT_UNDO
        MENUITEM SEPARATOR
        MENUITEM "Select More\tCtrl-M",						ID_EDIT_SELECT_MORE
    END
    POPUP "Model"
    BEGIN
        MENUITEM "Prepare Model\tCtrl+R",					ID_MODEL_PREPARE_MODEL
        MENUITEM "Calculate Boxes",							ID_MODEL_CALC_BOXES
        MENUITEM "Calculate Normals",						ID_MODEL_CALC_NORMAL
		MENUITEM SEPARATOR
        MENUITEM "Scale...",								ID_MODEL_SCALE
		MENUITEM SEPARATOR
        MENUITEM "Flip X",									ID_MODEL_FLIP_X
        MENUITEM "Flip Y",									ID_MODEL_FLIP_Y
        MENUITEM "Flip Z",									ID_MODEL_FLIP_Z
		MENUITEM SEPARATOR
        MENUITEM "Swap X/Z",								ID_MODEL_SWAP_XZ
        MENUITEM "Swap Y/Z",								ID_MODEL_SWAP_YZ
        MENUITEM "Center X/Z",								ID_MODEL_CENTER_XZ
        MENUITEM "Floor Y",									ID_MODEL_FLOOR_Y
		MENUITEM SEPARATOR
        MENUITEM "Add Hit Box",								ID_MODEL_ADD_HIT_BOX
    END
    POPUP "View"
    BEGIN
        MENUITEM "Front\tCtrl+1",							ID_VIEW_FRONT
        MENUITEM "Left\tCtrl+2",							ID_VIEW_LEFT
        MENUITEM "Right\tCtrl+3",							ID_VIEW_RIGHT
        MENUITEM "Back\tCtrl+4",							ID_VIEW_BACK
        MENUITEM "Top\tCtrl+5",								ID_VIEW_TOP
        MENUITEM "Bottom\tCtrl+6",							ID_VIEW_BOTTOM
    END
    POPUP "Mesh"
    BEGIN
        MENUITEM "Add Mesh",								ID_MESH_ADD
        MENUITEM "Duplicate Mesh",							ID_MESH_DUPLICATE
		MENUITEM SEPARATOR
        MENUITEM "Import OBJ...",							ID_MESH_IMPORT_OBJ
        MENUITEM "Replace OBJ...",							ID_MESH_REPLACE_OBJ
        MENUITEM "Add dim3 Mesh...",						ID_MESH_ADD_MESH
		MENUITEM SEPARATOR
        MENUITEM "Scale...\tCtrl+T",						ID_MESH_SCALE
		MENUITEM SEPARATOR
        MENUITEM "Flip X",									ID_MESH_FLIP_X
        MENUITEM "Flip Y",									ID_MESH_FLIP_Y
        MENUITEM "Flip Z",									ID_MESH_FLIP_Z
		MENUITEM SEPARATOR
        MENUITEM "Flip Texture Us",							ID_MESH_FLIP_U
        MENUITEM "Flip Texture Vs",							ID_MESH_FLIP_V
 		MENUITEM SEPARATOR
        MENUITEM "Swap X/Z",								ID_MESH_SWAP_XZ
        MENUITEM "Swap Y/Z",								ID_MESH_SWAP_YZ
        MENUITEM "Center X/Z",								ID_MESH_CENTER_XZ
        MENUITEM "Floor Y",									ID_MESH_FLOOR_Y
   END
    POPUP "Vertexes"
    BEGIN
        MENUITEM "Select All\tCtrl+A",						ID_VERTEX_SELECT_ALL
        MENUITEM "Select Not Attached\tCtrl+Shift+A",		ID_VERTEX_SELECT_NOT_ATTACHED
 		MENUITEM SEPARATOR
        MENUITEM "Invert Normals\tCtrl+I",					ID_VERTEX_INVERT_NORMAL
        MENUITEM "Set Normals...\tCtrl+Alt+I",				ID_VERTEX_SET_NORMAL
        MENUITEM "Set Normals Out",							ID_VERTEX_SET_NORMAL_OUT
        MENUITEM "Set Normals In",							ID_VERTEX_SET_NORMAL_IN
 		MENUITEM SEPARATOR
        MENUITEM "Clear Bone Attachments",					ID_VERTEX_CLEAR_BONE
        MENUITEM "Auto Set Bone Attachments",				ID_VERTEX_AUTO_SET_BONE
 		MENUITEM SEPARATOR
        MENUITEM "Hide Selected",							ID_VERTEX_HIDE_SELECTED
        MENUITEM "Hide Non-Selected",						ID_VERTEX_HIDE_NON_SELECTED
        MENUITEM "Show All",								ID_VERTEX_SHOW_ALL
 		MENUITEM SEPARATOR
        MENUITEM "Delete Vertexes",							ID_VERTEX_DELETE
    END
    POPUP "Bones"
    BEGIN
        MENUITEM "Add Bone\tCtrl+B",						ID_BONE_ADD
        MENUITEM "Set Bone...",								ID_BONE_SET
 		MENUITEM SEPARATOR
        MENUITEM "Goto Parent Bone\tCtrl+Alt+B",			ID_BONE_GOTO_PARENT
    END
    POPUP "Poses"
    BEGIN
        MENUITEM "New Pose\tCtrl+E",						ID_POSE_NEW
        MENUITEM "Duplicate Pose\tCtrl+D",					ID_POSE_DUPLICATE
 		MENUITEM SEPARATOR
        MENUITEM "Clear Pose",								ID_POSE_CLEAR
    END
    POPUP "Animations"
    BEGIN
        MENUITEM "New Animation\tCtrl+G",					ID_ANIMATION_NEW
        MENUITEM "Duplicate Animation",						ID_ANIMATION_DUPLICATE
		MENUITEM SEPARATOR
        MENUITEM "Scale Animation Time...",					ID_ANIMATION_SCALE_TIME
 		MENUITEM SEPARATOR
        MENUITEM "Play Animation\tCtrl+P",					ID_ANIMATION_PLAY
        MENUITEM "Play Blended Animation...\tCtrl+Shift+P",	ID_ANIMATION_PLAY_BLENDED
    END
END

